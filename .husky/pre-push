# Run comprehensive checks before push
echo "🚀 Running pre-push checks..."

# Run formatter, linter and import sorting on all code
echo "🎨 Running formatter, linter and import sorting"
pnpm check

# Type check all code
echo "🔧 Type checking all code..."
pnpm check-types

# Run all tests
echo "🧪 Running all tests..."
pnpm test

# Build everything to ensure it works
echo "🏗️ Building all packages..."
pnpm build

# Run security audit
echo "🔒 Running security audit..."
pnpm security:audit

echo "✅ Pre-push checks passed! Safe to push."