{
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  },
  "editor.defaultFormatter": "biomejs.biome",
  "editor.formatOnSave": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\\\(([^)]*)\\\\)", "[\\\"'`]([^\\\"'`]*).*?[\\\"'`]"],
    ["cx\\\\(([^)]*)\\\\)", "(?:'|\\\"|`)([^']*)(?:'|\\\"|`)"]
  ],

  // TypeScript Configuration for Monorepo
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.autoImportFileExcludePatterns": ["next/router.d.ts", "next/dist/client/router.d.ts"],
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.preferences.useLabelDetailsInCompletionEntries": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.workspaceSymbols.scope": "allOpenProjects",

  // Enable TypeScript references in monorepo
  "typescript.references.enabled": true,
  "typescript.implementation.enabled": true,

  // Better auto-import resolution for workspace packages
  "typescript.suggest.autoImports": true,
  "typescript.suggest.paths": true,
  "typescript.preferences.resolveStyleAndWatchPreference": "usePollWatching",

  // Testing
  "vitest.enable": true,
  "vitest.commandLine": "pnpm exec vitest",

  // File associations
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // Search exclusions
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.turbo": true,
    "**/coverage": true,
    "**/.tsbuildinfo": true
  },

  // File watcher exclusions for better performance
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/.turbo/**": true,
    "**/coverage/**": true,
    "**/.tsbuildinfo": true
  },

  // Formatters by language
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },

  // IntelliSense optimizations
  "editor.suggest.showWords": false,
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.wordBasedSuggestions": "off",
  "editor.quickSuggestionsDelay": 0,

  // Breadcrumbs for better navigation
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showModules": true
}
