{
  "name": "rezumerai",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "changeset": "changeset",
    "publish:packages": "changeset publish",
    "version:packages": "turbo build && changeset version",
    "add-shadcn-component": "turbo run add-shadcn-component -- --",
    "build": "turbo build",
    "build:production": "NODE_ENV=production turbo build",
    "dev": "turbo dev",
    "docker:db": "docker compose up -d database redis",
    "docker:build": "./scripts/docker-compose-build.sh",
    "docker:build:standalone": "./scripts/docker-build.sh",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "check": "turbo check --continue --",
    "lint-staged": "lint-staged",
    "check-types": "turbo check-types --continue --",
    "code:check": "bun run check && bun run check-types",
    "code:verify": "bun run code:check && bun run test:workspace && bun run build",
    "test": "turbo test --continue --",
    "test:watch": "turbo test:watch --continue --",
    "test:ui": "turbo test:ui --continue --",
    "test:coverage": "turbo test:coverage --continue --",
    "test:workspace": "vitest --run",
    "test:watch:workspace": "vitest --watch",
    "test:ui:workspace": "vitest --ui",
    "test:coverage:workspace": "vitest run --coverage",
    "clean": "turbo clean && rimraf node_modules .turbo",
    "install-modules": "bun install && turbo run build --filter=./packages/*",
    "update-modules": "bun update --recursive --latest",
    "clean:install": "turbo clean && rimraf node_modules .turbo bun.lock && bun install && turbo run build --filter=./packages/*",
    "build:packages": "turbo build --filter=./packages/*",
    "db:setup": "cd packages/database && bun run db:push && bun run db:generate",
    "db:studio": "cd packages/database && bun run db:studio",
    "db:reset": "cd packages/database && bun run with-env prisma migrate reset --force",
    "outdated": "bun outdated",
    "security:audit": "bun audit --production",
    "security:check": "bunx audit-ci --config .audit-ci.json",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.15",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@vitest/coverage-v8": "^4.0.18",
    "husky": "^9.1.7",
    "lint-staged": "16.2.7",
    "postcss": "^8.5.6",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.7",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "body-parser": "^2.2.1",
    "hono": "^4.10.3",
    "valibot": "^1.2.0",
    "lodash": "4.17.23"
  },
  "trustedDependencies": [
    "@prisma/client",
    "@swc/core",
    "esbuild",
    "prisma",
    "sharp"
  ],
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,md,yaml,yml}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "packageManager": "bun@1.3.8",
  "dependencies": {
    "zustand": "^5.0.11"
  }
}
