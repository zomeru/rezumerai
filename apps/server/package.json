{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run build && concurrently \"npm run watch-compile\" \"npm run watch-dev\"",
    "watch-compile": "pnpm with-env swc src index.ts -w --out-dir dist --ignore node_modules,dist,**/*.test.*,**/*.spec.*,vitest.config.ts,**/test/**",
    "watch-dev": "pnpm with-env nodemon --watch dist --ext js --exec \"node -r tsconfig-paths/register dist/index.js\"",
    "build": "pnpm with-env swc src index.ts --out-dir dist --ignore node_modules,dist,**/*.test.*,**/*.spec*,vitest.config.ts,**/test/**",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "check-types": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "biome check src index.ts",
    "lint:fix": "biome check --write src index.ts",
    "format": "biome format src index.ts",
    "format:fix": "biome format --write src index.ts",
    "clean": "rm -rf dist .turbo node_modules",
    "with-env": "dotenv -e ../../.env.local --"
  },
  "dependencies": {
    "@rezumerai/database": "workspace:*",
    "@rezumerai/types": "workspace:*",
    "@rezumerai/utils": "workspace:*",
    "@ts-rest/core": "3.53.0-rc.1",
    "@ts-rest/express": "3.53.0-rc.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "morgan": "^1.10.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@rezumerai/tsconfig": "workspace:*",
    "@rezumerai/vitest-config": "workspace:*",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "nodemon": "^3.1.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=22"
  }
}
