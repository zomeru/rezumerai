{
  "extends": "@rezumerai/tsconfig/express.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@rezumerai/types": ["../../packages/types/dist"],
      "@rezumerai/types/*": ["../../packages/types/dist/*"],
      "@rezumerai/utils": ["../../packages/utils/src"],
      "@rezumerai/utils/*": ["../../packages/utils/src/*"],
      "@rezumerai/database": ["../../packages/database"],
      "@rezumerai/database/*": ["../../packages/database/*"]
    },
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.*"]
}
