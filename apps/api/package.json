{
  "name": "@rezumerai/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "bun run with-env bun --watch --no-clear-screen src/index.ts",
    "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server src/index.ts",
    "start": "bun run with-env ./server",
    "check-types": "tsc --noEmit",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "check": "biome check --write .",
    "clean": "rimraf dist .turbo node_modules coverage tsconfig.tsbuildinfo tsup.config.bundled*",
    "with-env": "dotenv -e ../../.env.local --"
  },
  "exports": {
    ".": {
      "types": "./src/app.ts"
    }
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@elysiajs/openapi": "^1.4.14",
    "@elysiajs/swagger": "^1.3.1",
    "@rezumerai/database": "workspace:*",
    "@rezumerai/types": "workspace:*",
    "@rezumerai/utils": "workspace:*",
    "elysia": "^1.4.25",
    "elysia-helmet": "^3.0.0",
    "elysia-http-exception": "^0.1.5",
    "elysia-rate-limit": "^4.5.0",
    "elysia-xss": "^1.0.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@rezumerai/tsconfig": "workspace:*",
    "@types/bun": "^1.3.9",
    "dotenv-cli": "^11.0.0",
    "typescript": "^5.9.3"
  }
}
