{
  "extends": "@rezumerai/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "declarationMap": false,
    "paths": {
      "@/*": ["./src/*"],
      "@rezumerai/api": ["../../apps/api/src/app"],
      "@rezumerai/ui": ["../../packages/ui/src"],
      "@rezumerai/ui/*": ["../../packages/ui/src/*"],
      "@rezumerai/types": ["../../packages/types/dist"],
      "@rezumerai/types/*": ["../../packages/types/dist/*"],
      "@rezumerai/utils": ["../../packages/utils/src"],
      "@rezumerai/utils/*": ["../../packages/utils/src/*"],
      "@rezumerai/database": ["../../packages/database"],
      "@rezumerai/database/*": ["../../packages/database/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "postcss.config.mjs",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*", "**/__tests__/**", "scripts/**"]
}
