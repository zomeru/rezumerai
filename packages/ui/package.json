{
  "name": "@rezumerai/ui",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "src/**",
    "postcss.config.ts",
    "tailwind.config.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./globals.css": "./global.css",
    "./postcss.config": "./postcss.config.mjs",
    "./components/*": [
      "./src/**/*.tsx"
    ]
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "check": "biome check --write src global.css",
    "clean": "rm -rf node_modules .turbo dist"
  },
  "dependencies": {
    "@rezumerai/types": "workspace:*",
    "@rezumerai/utils": "workspace:*",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.1",
    "@rezumerai/tsconfig": "workspace:*",
    "@rezumerai/vitest-config": "workspace:*",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6"
  },
  "packageManager": "pnpm@10.19.0",
  "engines": {
    "node": "22.x"
  }
}
