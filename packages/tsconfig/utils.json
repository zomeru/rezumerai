{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Shared Utils",
  "extends": "./base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@rezumerai/types": ["../types/src"],
      "@rezumerai/types/*": ["../types/src/*"],
      "@rezumerai/ui": ["../ui/src"],
      "@rezumerai/ui/*": ["../ui/src/*"],
      "@rezumerai/database": ["../database"],
      "@rezumerai/database/*": ["../database/*"],
      "@rezumerai/vitest-config": ["../vitest-config/src"],
      "@rezumerai/vitest-config/*": ["../vitest-config/src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
