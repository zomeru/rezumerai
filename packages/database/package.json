{
  "name": "@rezumerai/database",
  "version": "1.0.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "bash ./scripts/migrate-dev.sh && bun run watch",
    "build": "bun run clean:generated && bun run db:generate && bun run with-env tsup",
    "build:docker": "bun run clean:generated && bun run db:generate:prod && tsup",
    "watch": "bun run db:generate && bun run with-env tsup --watch",
    "db:generate": "mkdir -p generated/prisma && bun run with-env prisma generate",
    "db:generate:prod": "mkdir -p generated/prisma && prisma generate",
    "db:push": "bun run with-env prisma db push",
    "db:migrate:dev": "bun run clean:generated && bash ./scripts/migrate-dev.sh",
    "db:migrate:prod": "bun run with-env prisma migrate deploy",
    "db:studio": "bun run with-env prisma studio --port 5556",
    "check-types": "bun run db:generate && tsc --noEmit",
    "check": "biome check --write .",
    "clean:generated": "rimraf generated/",
    "clean": "rimraf node_modules .turbo dist generated/",
    "with-env": "dotenv -e ../../.env.local --"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@rezumerai/tsconfig": "workspace:*",
    "@types/node": "^25.2.1",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.3.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
