{
  "name": "@rezumerai/database",
  "version": "1.0.0",
  "exports": {
    ".": {
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm db:push\" \"pnpm db:generate\" \"pnpm watch\"",
    "build": "rimraf generated && pnpm db:generate && pnpm with-env tsup",
    "watch": "pnpm db:generate && pnpm with-env tsup --watch",
    "db:generate": "pnpm with-env prisma generate",
    "db:generate:prod": "prisma generate",
    "db:push": "pnpm with-env prisma db push",
    "db:migrate:dev": "bash ./scripts/migrate-dev.sh",
    "db:migrate:prod": "pnpm with-env prisma migrate deploy",
    "db:studio": "pnpm with-env prisma studio --port 5556",
    "check-types": "pnpm db:generate && tsc --noEmit",
    "check": "biome check --write .",
    "clean": "rimraf node_modules .turbo dist generated",
    "with-env": "dotenv -e ../../.env.local --"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": "24.x"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@rezumerai/tsconfig": "workspace:*",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
