{
  "extends": "@rezumerai/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@rezumerai/types": ["../types/src"],
      "@rezumerai/types/*": ["../types/src/*"],
      "@rezumerai/utils": ["../utils/src"],
      "@rezumerai/utils/*": ["../utils/src/*"],
      "@rezumerai/ui": ["../ui/src"],
      "@rezumerai/ui/*": ["../ui/src/*"],
      "@rezumerai/database": ["../database"],
      "@rezumerai/database/*": ["../database/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules", "**/*.test.*"]
}
